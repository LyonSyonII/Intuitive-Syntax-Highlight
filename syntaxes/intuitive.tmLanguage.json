{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "Intuitive",
	"patterns": [
		{
			"include": "#keywords"
		},
		{
			"include": "#strings"
		},
		{
			"include": "#multilinecomments"
		}

	],
	"repository": {
		"keywords": {
			"patterns": [
			{
				"name": "keyword.control.intuitive",
				"match": "(\\b(if|while|for|si|llavors|then)\\b)|\\:"
			},
			{
				"name": "constant.language.intuitive",
				"match": "\\b(cert|fals|true|false)\\b"

			},
			{
				"name": "keyword.operator.assign.intuitive",
				"match": "\\b(igual|equal)\\b"
			},
			{
				"name": "keyword.operator.intuitive",
				"match": "\\b(mes|m√©s|menys|per|entre)\\b"
			},
			{
				"name": "entity.name.function",
				"match": "\\b(?i)(imprimir|print)\\b"
			},
			{
				"name": "comment.intuitive",
				"match": "\\b(es|a|is|to)\\b"
			},
			{
				"name": "variable.name",
				"match": "\\b([A-Z]\\w*)\\b"
			},
			{
				"name": "constant.numeric",
				"match": "\\b([0-9,]+)\\b"
			},
			{
				"name": "punctuation.definition.separator",
				"match": "\\."
			}
		]
		},
		"strings": {
			"name": "string.quoted.double.intuitive",
			"begin": "\"",
			"end": "\"",
			"patterns": [
				{
					"name": "constant.character.escape.intuitive",
					"match": "\\\\."
				}
			]
		},
		"multilinecomments": {
			"patterns": [
				{
					"name":"comment.block.intuitive",
					"begin": "\\(",
					"end": "\\)",
					"patterns": [
						{
							"include": "#multilinecomments"
						}
					]
				}
			]
		}
	},
	"scopeName": "source.in"
}